{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schema/university-degree",
    "title": "University Degree",
    "description": "A W3C-compliant schema for a University Degree",
    "type": "object",
    "properties": {
        "@context": {
            "oneOf": [
                { "type": "string" },
                { "type": "array", "items": { "type": "string" } },
                { "type": "object" }
            ]
        },
        "design": {"type": "string"},
        "orientation": {"type": "string"},
        "id": {
            "type": "string",
            "format": "uri"
        },
        "type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "issuer": {
            "type": "object",
            "properties": {
                "id": { "type": "string", "format": "uri" },
                "name": { "type": "string" }
            },
            "required": ["id", "name"]
        },
        "validFrom": {
            "type": "string",
            "format": "date-time"
        },
        "validUntil": {
            "type": "string",
            "format": "date-time"
        },
        "credentialSubject": {
            "type": "object",
            "properties": {
                "id": { "type": "string", "format": "uri" },
                "type": { "type": "string", "enum": ["StudentIdentificationInformation"] },
                "identifier": { "type": "string" },
                "userName": { "type": "string" },
                "enrollmentNumber": { "type": "string" },
                "division": { "type": "string" },
                "enrollmentNumber": { "type": "string" },
                "degreeType": { "type": "string" },
                "issuerName": { "type": "string" }
            },
            "required": ["id", "type", "userName", "enrollmentNumber", "degreeType"]
        },
        "proof": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "created": { "type": "string", "format": "date-time" },
                "proofPurpose": { "type": "string" },
                "verificationMethod": { "type": "string", "format": "uri" },
                "signature": { "type": "string" }
            },
            "required": ["type", "created", "proofPurpose", "verificationMethod", "signature"]
        }
    },
    "required": ["@context", "id", "type", "issuer", "validFrom", "validUntil", "credentialSubject", "proof"]
}
