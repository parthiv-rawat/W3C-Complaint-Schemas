{
    "$id": "",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Merit Certificate",
    "description": "This template serves as a foundational certificate, capturing essential information about the certificate holder.",
    "type": "object",
    "properties": {
        "@context": {
            "oneOf": [
                {
                    "type": "string",
                    "items": {}
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                {
                    "type": "object",
                    "items": {}
                }
            ]
        },
        "design": {
            "type": "string"
        },
        "orientation": {
            "type": "string"
        },
        "id": {
            "type": "string",
            "format": "uri"
        },
        "issuer": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "issuerName": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "issuerName"
            ]
        },
        "validFrom": {
            "type": "string",
            "format": "date"
        },
        "validUntil": {
            "type": "string",
            "format": "date"
        },
        "credentialSubject": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "MeritCertificateInformation"
                    ]
                },
                "userName": {
                    "type": "string",
                    "description": "The full name of the certificate holder."
                },
                "address": {
                    "type": "string"
                },
                "certificateNumber": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "fatherName": {
                    "type": "string"
                },
                "dateOfBirth": {
                    "type": "string"
                },
                "enrollmentNumber": {
                    "type": "string"
                },
                "gender": {
                    "type": "string"
                },
                "courseName": {
                    "type": "string"
                },
                "branch": {
                    "type": "string"
                },
                "session": {
                    "type": "string"
                },
                "rank": {
                    "type": "string"
                },
                "examinationName": {
                    "type": "string"
                },
                "recognitionLevel": {
                    "type": "string"
                },
                "totalMarks": {
                    "type": "string"
                },
                "passoutYear": {
                    "type": "string"
                },
                "department": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "userName",
                "department",
                "passoutYear",
                "rank",
                "session",
                "branch",
                "enrollmentNumber",
                "location",
                "address"
            ]
        }
    },
    "required": [
        "@context",
        "id",
        "type",
        "issuer",
        "validFrom",
        "credentialSubject"
    ]
}
