{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schema/participation-certificate",
  "title": "Participation Certificate",
  "description": "A W3C-compliant schema for a Participation Certificate",
  "type": "object",
  "properties": {
      "@context": {
          "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } },
              { "type": "object" }
          ]
      },
      "design": {"type": "string"},
      "orientation": {"type": "string"},
      "id": {
          "type": "string",
          "format": "uri"
      },
      "type": {
          "type": "array",
          "items": {
              "type": "string"
          }
      },
      "issuer": {
          "type": "object",
          "properties": {
              "id": { "type": "string", "format": "uri" },
              "issuerName": { "type": "string" }
          },
          "required": ["id", "issuerName"]
      },
      "validFrom": {
          "type": "string",
          "format": "date"
      },
      "validUntil": {
          "type": "string",
          "format": "date"
      },
      "credentialSubject": {
          "type": "object",
          "properties": {
              "id": { "type": "string", "format": "uri" },
              "type": { "type": "string", "enum": ["ModifiedParticipationCertificateInformation"] },
              "identifier": { "type": "string" },
              "userName": { "type": "string" },
              "deanName": { "type": "string" },
              "eventName": { "type": "string" },
              "eventDate": { "type": "string"}
          },
          "required": ["id", "type", "userName", "eventName"]
      }
  },
  "required": ["@context", "id", "type", "issuer", "validFrom", "credentialSubject"]
}
